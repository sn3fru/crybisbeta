<%= simple_form_for(@answer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.input :proposta %>
    <%= f.input :value %>
    <%= f.input :prospect %>
    <%= f.association :user %>
    <%= f.association :question %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
