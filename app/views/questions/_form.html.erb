<%= form_for @question, :url => questions_path, :html => { :class => 'form-horizontal form-model', :multipart => true  } do |f| %>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :body, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :bounty, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :bounty, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :prospect, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :prospect, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :avatar, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.file_field :avatar, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  questions_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
